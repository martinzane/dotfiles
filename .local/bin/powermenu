#!/bin/sh

# Power menu script using tofi

CHOSEN=$(printf "Lock\nSuspend\nReboot\nPower off\nLog out" | tofi --config "$HOME"/.config/tofi/powermenu-config)

case "$CHOSEN" in
	"Lock") swaylock;;
	"Suspend") systemctl suspend-then-hibernate ;;
	"Reboot") systemctl reboot;;
	"Power off") systemctl poweroff ;;
	"Log out") logout;;
	*) exit 1 ;;
esac
